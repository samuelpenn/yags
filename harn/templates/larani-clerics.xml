			<skill name="Light of Dolithor" score="1" weight="1"/>
            <skill name="Valamin's Insight" score="2" weight="3"/>
            <skill name="Fast of the Tirannon" score="1" weight="1"/>
            <skill name="Passage to Tirithor" score="1" weight="3"/>
            <skill name="Curse of the Reluctant Warrior" score="1" weight="3"/>
            <skill name="Courage of Mendiz" score="1" weight="1"/>
            <skill name="Etiquette" score="0" weight="3"/>
		</group>
        
        <group name="Skills at age 21" type="age21">
            <skill name="Weapon and shield" score="4"/>
