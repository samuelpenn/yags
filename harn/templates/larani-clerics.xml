<character-template name="Order of Hyvrik">

    <description>
    The Order of Hyvrik is the Larani clerical order which sponsors
    the fighting order Checkered Shield. The order is very wealthy,
    holding vast estates throughout Kanday.
    <br/>
    Most members of the Order are temple priests, trained in the
    teachings of their goddess, and to some extent in war, so that
    they are at least able to defend themselves and their parish
    from danger.
    </description>

	<attributes points="48">
		<strength score="3" weight="6"/>
		<stamina score="3" weight="3"/>
		<agility score="2" weight="1"/>
		<dexterity score="3" weight="3"/>
		<perception score="3" weight="3"/>
		<intelligence score="3" weight="6"/>
		<charisma score="4" weight="9"/>
		<will score="4" weight="9"/>
	</attributes>

	<advantages points="14">
		<advantage name="attributes" cost="+5"/>
		<advantage name="literate" cost="+2"/>
		<advantage name="social status" cost="+2"/>
		<advantage name="experience" core="10pts" cost="+5"/>
        <advantage name="terrible liar" score="-3" cost="-3"/>
        <advantage name="duty" target="aiding the church" cost="-6"/>
        <advantage name="loyalty" target="Larani" score="+4" cost="-4"/>
        <advantage name="sensitive" target="suffering of the weak" score="+3" cost="-1"/>
	</advantages>

	<skills>
		<group name="Talents" type="talents">
			<skill name="Athletics" score="2" weight="1"/>
