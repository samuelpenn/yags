<equipment xmlns="http://yagsbook.sourceforge.net/xml">


    <item name="Quilted jacket">
        <category>Armour</category>
        <importance>2</importance>
        <availability>2</availability>

        <short>A heavily padded cloth jacket.</short>

        <description>
            <para>
                A heavy jacket of padded cloth. It is bulkier than
                soft leather armour, but its extra thickness adds
                greater protection. It is viewed as peasant armour,
                and rarely worn by noble warriors.
            </para>
        </description>

        <weight>2000</weight>
        <material>cloth</material>
        <cost>12</cost>

        <armour xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <protection>+3</protection>
            <load>2</load>
            <weight>2000</weight>

            <covers>
                <torso/>
                <arms/>
                <groin/>
            </covers>

            <properties>
                <light/>
                <soft/>
            </properties>
        </armour>
    </item>

    <item name="Quilted hauberk">
        <category>Armour</category>
        <importance>2</importance>
        <availability>2</availability>

        <short>A heavily padded cloth hauberk.</short>

        <description>
            <para>
                A long heavy jacket of padded cloth. It is commonly
                worn by militia troops, since it is cheap, light and
                easy to make. It can be better than mail against
                small improvised weapons since its thickness gives
                better padding.
            </para>
        </description>

        <weight>3000</weight>
        <material>cloth</material>
        <cost>20</cost>

        <armour xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <protection>+4</protection>
            <load>3</load>

            <covers>
                <neck/>
                <torso/>
                <arms/>
                <groin/>
                <thighs/>
            </covers>

            <properties>
                <restrictive score="1"/>
                <light/>
                <soft/>
            </properties>
        </armour>
    </item>

