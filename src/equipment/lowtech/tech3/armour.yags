    <item name="Soft leather trousers">
        <category>Armour</category>
        <importance>3</importance>
        <availability>3</availability>

        <short>Leather trousers.</short>

        <description>
            <para>
                Trousers made of thick leather. They are flexible so as
                not to restrict movement, but only provide limited
                protection. Often worn under mail to add extra padding.
            </para>
        </description>

        <weight>1000</weight>
        <material>leather</material>
        <cost>40</cost>

        <armour xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <protection>+1</protection>
            <load>1</load>

            <covers>
                <groin/>
                <legs/>
            </covers>

            <notes>Can be worn under mail leggings.</notes>

            <properties>
                <light/>
            </properties>
        </armour>
    </item>

    <item name="Soft leather jacket">
        <category>Armour</category>
        <importance>3</importance>
        <availability>3</availability>

        <short>Leather jacket.</short>

        <description>
